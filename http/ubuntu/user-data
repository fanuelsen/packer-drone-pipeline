#cloud-config
 autoinstall:
     version: 1
     early-commands:
         # Stop ssh for packer
         - sudo systemctl stop ssh
     locale: en_US
     keyboard:
         layout: en
         variant: uk
     late-commands:
       - "echo 'packer        ALL=(ALL)       NOPASSWD: ALL' >> /etc/sudoers"
       - sed -i "s/^.*requiretty/#Defaults requiretty/" /etc/sudoers
     identity:
         hostname: system
         username: packer
         password: 'packer'
     ssh:
         install-server: yes
         allow-pw: yes
     storage:
         layout:
             name: direct
