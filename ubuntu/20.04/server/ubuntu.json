{
  "builders": [
    {
      "boot_command": [
        "<esc><esc><esc>",
        "<enter><wait>",
        "/casper/vmlinuz ",
        "root=/dev/sr0 ",
        "initrd=/casper/initrd ",
        "autoinstall ds=nocloud-net;s=https://sanntid.horten.kommune.no/ubuntu/",
        "<enter>"
      ],
      "insecure_connection": "true",
      "vcenter_server": "{{ user `vcenter_server` }}",
      "username": "{{ user `vcenter_username` }}",
      "password": "{{ user `vcenter_password` }}",
      "cluster": "{{ user `vsphere_cluster` }}",
      "datastore": "{{ user `datastore` }}",
      "folder": "{{user `folder`}}",
      "boot_wait": "5s",
      "cpus": "{{ user `vcpus` }}",
      "disk_controller_type": "{{ user `disk_controller_type` }}",
      "guest_os_type": "ubuntu64Guest",
      "convert_to_template": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "ram": "{{ user `ram` }}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'",
      "ssh_handshake_attempts": "20",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_pty": true,
      "ssh_timeout": "60m",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vsphere-iso",
      "vm_name": "{{ user `vm_name` }}",
      "notes": "{{ timestamp }}",
      "network_adapters": [
        {
          "network": "{{ user `network` }}",
          "network_card": "{{ user `network_card` }}"
        }
      ],
      "storage": [
        {
          "disk_size": "{{ user `disk_size` }}",
          "disk_thin_provisioned": true
        }
      ]
    },
    {
      "boot_wait":"5s",
      "boot_command": [
        "<esc><esc><esc>",
        "<enter><wait>",
        "/casper/vmlinuz ",
        "root=/dev/sr0 ",
        "initrd=/casper/initrd ",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu/",
        "<enter>"
      ],
      "http_directory": "http",
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "vm_name": "{{ user `vm_name` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "guest_additions_mode": "disable",
      "headless": false,
      "disk_size": "{{ user `disk_size` }}",
      "communicator": "ssh",
      "ssh_handshake_attempts": "20",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_pty": true,
      "ssh_timeout": "60m",
      "ssh_username": "{{ user `ssh_username` }}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'",
      "vboxmanage": [
        ["modifyvm","{{ .Name }}","--memory","{{ user `ram` }}"],
        ["modifyvm","{{ .Name }}","--cpus","{{ user `vcpus` }}"]
      ]
    }            
   ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/open-vm-tools.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}